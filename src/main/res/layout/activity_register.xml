<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <EditText
        android:id="@+id/nameId"
        android:drawableLeft="@drawable/user_account"
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:hint="Name"/>
    <EditText
        android:id="@+id/emailId"
        android:drawableLeft="@drawable/email"
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Email"/>
    <EditText
        android:id="@+id/registerUsernameId"
        android:drawableLeft="@drawable/user_account"
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="User Name"/>

    <EditText
        android:id="@+id/registerpasswordId"
        android:drawableLeft="@drawable/password"
        android:inputType="textPassword"
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Password"/>
    <EditText
        android:id="@+id/registerConfirmpasswordId"
        android:drawableLeft="@drawable/password"
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Confirm Password"/>
    <Button
        android:id="@+id/registerId"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="#19EC10"
        android:layout_marginTop="10dp"
        android:hint="Register"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:textColor="#fff"
            android:text="Already Registered ?" />

        <TextView
            android:id="@+id/login_page_registerId"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#C2441C"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Login" />
    </LinearLayout>

</LinearLayout>